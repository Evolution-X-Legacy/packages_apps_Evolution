<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/extra_settings_title" >

        <!-- Status Bar -->
        <Preference
            android:key="status_bar_category"
            android:title="@string/status_bar_title" 
            android:fragment="com.extra.settings.fragments.StatusBar"
            android:icon="@drawable/ic_settings_statusbar"/>

        <!-- Themes -->
        <Preference
            android:key="theme_settings"
            android:title="@string/theme_main"
            android:fragment="com.extra.settings.fragments.ThemeFragment"
            android:icon="@drawable/ic_settings_theme" />

        <!-- Lock Screen -->
        <Preference
            android:key="lock_screen_category"
            android:title="@string/lock_screen_title" 
            android:fragment="com.extra.settings.fragments.LockScreen"
            android:icon="@drawable/ic_settings_lockscreen"/>

        <!-- Quick Settings -->
        <Preference
            android:key="quick_settings_category"
            android:title="@string/quick_settings_title" 
            android:fragment="com.extra.settings.fragments.QuickSettings"
            android:icon="@drawable/ic_settings_quicksettings"/>

        <!-- Gestures -->
        <Preference
            android:key="gesture_settings"
            android:icon="@drawable/ic_settings_gestures"
            android:title="@string/gesture_settings_title"
            android:fragment="com.extra.settings.fragments.GesturesSettings" />

        <!-- Notification Settings -->
        <Preference
            android:key="notifications"
            android:title="@string/notification_settings_title"
            android:fragment="com.extra.settings.fragments.Notifications"
            android:icon="@drawable/ic_settings_notifications"/>

        <!-- Power Menu -->
        <Preference
            android:key="power_menu_category"
            android:title="@string/power_menu_title" 
            android:fragment="com.extra.settings.fragments.PowerMenu"
            android:icon="@drawable/ic_settings_powermenu"/>

        <!-- Volume Keys -->
        <Preference
            android:key="volume_keys_category"
            android:title="@string/volume_keys_title" 
            android:fragment="com.extra.settings.fragments.VolumeKeys"
            android:icon="@drawable/ic_settings_rocker"/>

        <!-- General Tweaks -->
        <Preference
            android:key="general_tweaks"
            android:title="@string/general_tweaks_title"
            android:fragment="com.extra.settings.fragments.GeneralTweaks"
            android:icon="@drawable/ic_general_tweaks"/>

</PreferenceScreen>
